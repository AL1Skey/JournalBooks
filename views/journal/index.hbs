<h1>Journal</h1>
<div class="row">
    {{#each journals}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon ../user user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{limit (stripTags body) 150}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/journal/user/{{user.id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/journal/{{_id}}" class="btn grey">>> Read More</a>
                </div>
            </div>
        </div>
    {{else }}
        <p>No Journal to display</p>
    {{/each}}
</div>